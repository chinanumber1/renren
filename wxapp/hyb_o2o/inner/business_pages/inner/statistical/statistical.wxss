page {
    background: #f3f3f3;
}

.noadd {
    width: 100%;
    height: 100%;
    text-align: center;
}

.noadd image {
    width: 60%;
    margin-top: 100rpx;
}

.selec {
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 20rpx 0;
    font-size: 30rpx;
    border-bottom: 2rpx solid #f1f1f1;
}

.selec view {
    width: 33.33%;
}

.selec .section .picker {
    width: 100%;
    text-align: center;
    border-right: 1px solid #f2f2f2;
    position: relative;
    font-size: 26rpx;
}

.section .arrow_dowm {
    width: 27rpx;
    height: 30rpx;
    position: absolute;
    right: 24rpx;
    top: 50%;
    transform: translateY(-50%) rotate(90deg);
}