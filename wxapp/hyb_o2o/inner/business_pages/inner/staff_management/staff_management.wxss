@import "../../../../../__wuBaseWxss__/5.wxss";

page {
    padding-bottom: 100rpx;
    background: #f3f3f3;
}

.tr {
    text-align: right;
}

.btn {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 20rpx;
    color: #fff;
    background: #16C2B4;
    text-align: center;
}

.top {
    background: #FAFAFA;
    padding: 20rpx 0;
    color: #313131;
    border-bottom: 2rpx solid #D9D9D9;
    position: relative;
}

.back {
    color: #242424;
    position: absolute;
    left: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.right_arr {
    transform: rotateY(180deg);
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.list {
    padding: 20rpx;
}

.list_item {
    background: #fff;
    padding: 20rpx;
    position: relative;
}

.head_img {
    background: #dddddd;
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
    margin-right: 10rpx;
    justify-content: center;
    align-items: center;
}

.head_img image {
    width: 50rpx;
    height: 57rpx;
}

.erweima {
    width: 30rpx;
    height: 30rpx;
    margin-left: 20rpx;
}

.mid_erweima.sel {
    width: 400rpx;
    height: 400rpx;
    position: fixed;
    background: #fff;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    z-index: 555;
}

.modal {
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.5);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
}

.write2 {
    width: 44rpx;
    height: 40rpx;
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.label {
    padding: 5rpx 8rpx;
    color: #ff5c26;
    border: 2rpx solid #ff5c26;
    border-radius: 10rpx;
    margin-right: 10rpx;
}

.item {
    padding: 20rpx;
    background: #fff;
}

.save {
    color: #fff;
    background: #16C2B4;
    text-align: center;
    margin: 20rpx;
}