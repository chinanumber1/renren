.top {
    background: #FCF4D0;
    color: #94711C;
    padding: 20rpx 30rpx;
    font-size: 26rpx;
}

.list .item .item_img {
    width: 120rpx;
    height: 120rpx;
    border: 2rpx solid #f5f5f5;
    margin-bottom: 10rpx;
    position: relative;
}

.arrow_right {
    width: 15rpx;
    height: 20rpx;
}

.imgList {
    padding: 20rpx;
    flex-wrap: wrap;
}

.arrow {
    width: 25rpx;
    height: 25rpx;
}

.back {
    color: #242424;
    position: absolute;
    left: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    justify-content: space-between;
}

.right_arr {
    transform: rotateY(180deg);
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.list {
    width: 100%;
    overflow: hidden;
}

.item {
    background: #fff;
    padding: 30rpx 0;
}

.list .item .input {
    position: relative;
    padding: 0 20rpx;
}

.list .item textarea {
    min-height: 150rpx;
}

.list .item .name_num {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.title {
    color: #333;
    padding: 0 20rpx;
    font-weight: bold;
    flex-shrink: 0;
}

.cont {
    background: #fff;
    padding: 0 20rpx;
}

.bgff {
    background: #fff;
}

.border_bot_10 {
    border-bottom: 10rpx solid #f3f3f3;
}

.table_box {
    background: #fff;
}

.table_item {
    padding: 20rpx;
    align-items: flex-start;
}

.del_icon {
    width: 30rpx;
    height: 30rpx;
}

.uploadImg_box {
    width: 200rpx;
    height: 200rpx;
    background: #EAEAEA;
    justify-content: center;
}

.camera {
    width: 80rpx;
    height: 80rpx;
}

.submit {
    color: #fff;
    margin: 30rpx 20rpx;
    background: #EF4A50;
}

.swith_btn {
    transform: scale(0.7);
}

.wenhao {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
}

.tishiall {
    width: 96%;
    margin: 3% auto;
}

.tishi {
    color: #f00;
    font-size: 24rpx;
    text-align: left;
    margin: 1% 0;
    padding: 0 2%;
}

.upimage {
    width: 30%;
    box-sizing: border-box;
    padding: 6rpx;
    margin-right: 1%;
    float: left;
    flex-wrap: wrap;
}

.upimage1 {
    box-sizing: border-box;
    padding: 6rpx;
    margin-right: 1%;
    float: left;
    flex-wrap: wrap;
}

.upimage image {
    height: 200rpx;
    width: 100%;
}

.modal {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 5;
}

.guige_box {
    width: 70%;
    background: #eeeeee;
    z-index: 7;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    justify-content: center;
}

.guige_title {
    background: #EF4A50;
    color: #fff;
    padding: 20rpx 0;
}

.guige_cont {
    padding: 30rpx 30rpx;
}

.guige_cont .input {
    background: #fff;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}

.guige_cont .input input {
    padding: 10rpx 20rpx;
}

.add_btn {
    background: #EF4A50;
    color: #fff;
    margin-top: 30rpx;
}

.label_box {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #f3f3f3;
    z-index: 100;
}

.guigeform {
    z-index: 200;
}

.label_box.show {
    z-index: 15;
    display: block;
}

.label_box .submit {
    z-index: 16;
}

.shoufei_box.show {
    z-index: 10;
    display: block;
}

.label_box .label_inner {
    background: #fff;
    padding: 20rpx;
    padding-top: 0;
    overflow-y: scroll;
    height: 85%;
}

.label_box .submit {
    position: absolute;
    bottom: 20rpx;
    left: 48%;
    transform: translateX(-50%);
    width: 90%;
}

.label_item {
    margin-bottom: 20rpx;
}

.label_input>view {
    background: #F1F3F7;
    padding: 10rpx 20rpx;
    border-radius: 20rpx;
    margin-left: 4%;
}

.label_input view:nth-child(1) {
    width: 45%;
    font-size: 28rpx;
    margin-right: 1%;
}

.label_input view:nth-child(2) {
    width: 45%;
    font-size: 28rpx;
    margin-right: 2%;
}

.label_input view input {
    width: 100%;
}

.label_icon {
    width: 40rpx;
    height: 40rpx;
}

button[plain] {
    border: none;
    width: 40rpx;
    height: 40rpx;
    padding: 0;
    line-height: 0;
}

button[type=plain] image {
    width: 40rpx;
    height: 40rpx;
}

.sl_box {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    flex-direction: column;
}

.sl_box image {
    margin-bottom: 50rpx;
    width: 70%;
}

.charge_page {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 55;
    background: #fff;
}

.part {
    padding: 20rpx;
    background: #fff;
}

.charge_item {
    width: 200rpx;
    background: #E8E8E8;
    color: #666666;
    text-align: center;
    padding: 20rpx 0;
    margin-right: 20rpx;
    font-size: 28rpx;
    border: 2rpx solid #E8E8E8;
}

.charge_item.sel {
    border-color: #E8454A;
    color: #E8454A;
    background: #fff;
}