@import "../../../../../__wuBaseWxss__/5.wxss";

@import "../../../../template/template.wxss";

page {
    background: #f3f3f3;
}

.box {
    margin-bottom: 30rpx;
    padding-top: 100rpx;
    text-align: center;
}

.qr_btn {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: 0 auto;
    margin-bottom: 30rpx;
    background: orange;
    color: #fff;
    line-height: 200rpx;
}

.top {
    padding: 20rpx;
    background: #fff;
}

.loca image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.order_detail {
    background: #fff;
    padding: 0 20rpx;
    color: #717171;
}

.order_detail .title {
    color: #242424;
}

.order_detail .money {
    color: #FF5A16;
}

.order_detail .detail {
    padding: 20rpx 0;
}

.bot {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 95%;
    padding: 10rpx 20rpx;
    background: #fff;
}

.home,.server_per {
    width: 50rpx;
    height: 45rpx;
    margin-bottom: 10rpx;
    margin: 0 auto;
}

.go_home {
    margin-right: 50rpx;
    margin-left: 20rpx;
}

.hexiao {
    color: #fff;
    background: #1BD9BF;
    border-radius: 10rpx;
    padding: 10rpx 30rpx;
    margin-left: auto;
}

.modal {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
    z-index: 1;
}

.erweima {
    width: 400rpx;
    height: 400rpx;
    background: #fff;
    position: fixed;
    top: 25%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
}

.detail {
    font-size: 28rpx;
    line-height: 1.4em;
    letter-spacing: 3rpx;
}