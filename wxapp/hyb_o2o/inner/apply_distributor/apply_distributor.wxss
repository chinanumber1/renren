@import "../../../__wuBaseWxss__/5.wxss";

@import "../../template/template.wxss";

page {
    background: #eee;
}

.color {
    color: #545353;
}

.top {
    text-align: center;
    padding: 30rpx;
    color: #545454;
    margin-bottom: 30rpx;
}

.top .img {
    width: 150rpx;
    height: 150rpx;
    margin: 0 auto;
    margin-bottom: 20rpx;
}

.condition {
    padding: 0 20rpx;
    color: #545353;
    font-size: 26rpx;
}

.icon {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.title {
    width: 100rpx;
}

.top .img image {
    border-radius: 50%;
}

.item {
    padding: 20rpx;
}

.input {
    margin-left: 30rpx;
}

.input input {
    width: 100%;
}

.regist {
    margin: 30rpx;
    border-radius: 20rpx;
    background: #EF4A50;
    color: #fff;
}

.vip_icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.icons {
    display: inline-block;
    width: 35rpx;
    height: 35rpx;
    border: 2rpx solid #EF4A50;
    vertical-align: middle;
    margin-right: 10rpx;
}

.kcrzxy {
    width: 70%;
    left: 50%;
    top: 15%;
    position: fixed;
    transform: translate(-50%,0);
    background: #fff;
    border-radius: 10px;
    z-index: 999;
}

.kcrzxyhd {
    text-align: center;
    font-size: 30rpx;
    background: #EF4A50;
    height: 70rpx;
    line-height: 70rpx;
    color: white;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.kcrzxybd {
    font-size: 28rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.queren {
    position: relative;
    height: 70rpx;
    width: 30%;
    left: 35%;
    font-size: 30rpx;
    line-height: 70rpx;
    text-align: center;
    color: white;
    background: #EF4A50;
    border-radius: 10rpx;
    margin: 5px 0;
}

button:active {
    color: rgba(255,255,255,0.6);
    opacity: 0.6;
}

.zhezhao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.6);
    z-index: 998;
}

button[disabled][type="default"],button[disabled]:not([type]) {
    color: #fff;
}