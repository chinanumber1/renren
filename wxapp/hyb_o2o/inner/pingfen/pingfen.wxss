}

.upimg {
    width: 150rpx;
    height: 150rpx;
    border: 3rpx dashed #b5b5b5;
    color: #b5b5b5;
}

.upimg image {
    width: 80rpx;
    height: 80rpx;
}

.upimgbox image {
    width: 150rpx;
    height: 150rpx;
    margin-right: 20rpx;
    border: 2rpx solid #b5b5b5;
    margin-bottom: 20rpx;
}

.upimgbox {
    position: relative;
}

.upimgbox .del_img {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 0;
    top: 0;
    transform: translate(50%,-50%);
    border: none;
}

.bot .title image {
    width: 50rpx;
    height: 50rpx;
    margin: 0 20rpx;
}

.submit {
    font-size: 30rpx;
