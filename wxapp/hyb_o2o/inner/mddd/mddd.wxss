@import "../../../__wuBaseWxss__/5.wxss";

@import "../../template/template.wxss";

page {
    background: #f3f3f3;
    padding-top: 120rpx;
}

.switch {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
    padding: 20rpx 0;
    z-index: 5;
}

.switch .item_box {
    width: 60%;
    margin: 0 auto;
}

.switch .items {
    width: 50%;
    text-align: center;
    padding: 20rpx 0;
    color: #666666;
}

.switch .items:nth-child(1) {
    border-radius: 20rpx 0 0 20rpx;
    border: 2rpx solid #eee;
    border-right: none;
}

.switch .items:nth-child(2) {
    border-radius: 0 20rpx 20rpx 0;
    border: 2rpx solid #eee;
    border-left: none;
}

.switch .items.sel {
    color: #fff;
    background-color: #EF4A50;
}

.choose_list {
    background: #fff;
    color: #333;
    margin-bottom: 20rpx;
}

.choose_list .pick {
    width: 33.33%;
    text-align: center;
    justify-content: center;
}

.choose_list .pick input {
}

.choose_list picker {
    width: 64%;
}

.order_list .item .title {
    padding: 20rpx 0;
}

.j_img {
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
    border-radius: 50%;
}

.tel {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.tel_box {
    padding-left: 30rpx;
    border-left: 2rpx solid #f3f3f3;
}

.sanjiao {
    width: 14rpx;
    height: 20rpx;
    transform: rotate(90deg);
    margin-left: 20rpx;
}

.s_ok {
    color: #E52C2C;
}

.s_ing {
    color: #8FE9C7;
}

.item {
    margin: 20rpx;
    padding: 0 20rpx;
    margin-bottom: 20rpx;
    background: #fff;
    border-radius: 20rpx;
    font-size: 28rpx;
}

.item .mid .m_r {
    width: 80%;
    position: relative;
}

.item .img {
    width: 150rpx;
    height: 150rpx;
    margin-right: 20rpx;
}

.item .business_icon {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
}

.item .budget {
    position: absolute;
    top: 0rpx;
    right: 20rpx;
}

.item .qiang {
    color: #EF4A50;
    border: 2rpx solid #EF4A50;
    padding: 5rpx 30rpx;
    border-radius: 10rpx;
}

.no_more {
    width: 100%;
    text-align: center;
    padding-top: 100rpx;
}

.no_more image {
    width: 50%;
    margin-bottom: 20rpx;
}

.jiedanren view text {
    margin-right: 20rpx;
}

.call_btn {
    background: #F2AA56;
    color: #fff;
    padding: 10rpx 30rpx;
    border-radius: 30rpx;
    font-size: 24rpx;
}

.baojiamodal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
}

.baojiahid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
}

.baojiaform {
    width: 60%;
    padding: 50rpx;
    background: #fff;
    border-radius: 20rpx;
    position: relative;
    z-index: 1500;
    margin: 0 auto;
    top: 50%;
    transform: translateY(-50%);
    overflow: hidden;
}

.baojiaform view {
    width: 100%;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #999999;
}

.baojiaform input {
    width: 100%;
    font-size: 30rpx;
}

.baojiaform button::after {
    border: none;
}

.baojiaform button {
    font-size: 30rpx;
    color: #fff;
    background: #EF4A50;
    float: right;
    margin-top: 35rpx;
}