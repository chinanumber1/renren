@import "../../../__wuBaseWxss__/5.wxss";

page {
    background: #F3F3F3;
}

.list {
    padding-top: 20rpx;
    background: #fff;
}

.list .item {
    padding: 20rpx;
    background: #fff;
}

.list .item .title {
    color: #333333;
    font-size: 30rpx;
    margin-bottom: 10rpx;
    font-weight: bold;
}

.list .item .input {
    width: 50%;
    text-align: right;
}

.submit[size=mini] {
    color: #fff;
    background: #EF4A50;
    margin: 30rpx 50rpx;
    padding: 10rpx 80rpx;
    font-size: 28rpx;
    border-radius: 20rpx;
    display: block;
}

.jineng {
    padding-bottom: 150rpx;
}

.radio {
    margin-left: 30rpx;
}

.radio radio {
    transform: scale(0.7);
}

.uploadImg {
    justify-content: center;
    color: #C7C7C7;
    background: #F3F3F3;
    margin-right: 30rpx;
    width: 150rpx;
    height: 150rpx;
    position: relative;
}

.uploadImg .del_icon {
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(30%,-30%);
    width: 30rpx;
    height: 30rpx;
}

.search-school {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f8f8f8;
    z-index: 10;
}

.school-name {
    margin-right: 10rpx;
}

.jineng {
    background: #fff;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}

.yes {
    width: 60%;
    background: #EF4A50;
    color: #fff;
    font-size: 28rpx;
    border-radius: 20rpx;
    line-height: 1.8em;
    position: fixed;
    bottom: 30rpx;
    left: 50%;
    transform: translateX(-50%);
    padding: 10rpx 0;
}

.j_item {
    height: 90%;
}

.jineng .item {
    padding: 20rpx;
}

.kcrzxy {
    width: 70%;
    left: 50%;
    top: 15%;
    position: fixed;
    transform: translate(-50%,0);
    background: #fff;
    border-radius: 10px;
    z-index: 999;
}

.kcrzxyhd {
    text-align: center;
    font-size: 30rpx;
    background: #EF4A50;
    height: 70rpx;
    line-height: 70rpx;
    color: white;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.kcrzxybd {
    font-size: 28rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.queren {
    position: relative;
    height: 70rpx;
    width: 30%;
    left: 35%;
    font-size: 30rpx;
    line-height: 70rpx;
    text-align: center;
    color: white;
    background: #EF4A50;
    border-radius: 10rpx;
    margin: 5px 0;
}

button:active {
    color: rgba(255,255,255,0.6);
    opacity: 0.6;
}

.icons {
    display: inline-block;
    width: 35rpx;
    height: 35rpx;
    border: 2rpx solid #EF4A50;
    vertical-align: middle;
    margin-right: 10rpx;
}

.zhezhao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.6);
    z-index: 998;
}