@import "../../../__wuBaseWxss__/5.wxss";

@import "../../template/template.wxss";

page {
    background: #f3f3f3;
}

.item {
    background: #fff;
    padding: 20rpx;
}

.noadd {
    width: 100%;
    height: 100%;
    text-align: center;
}

.noadd image {
    width: 60%;
    margin-top: 100rpx;
}

.right {
    text-align: right;
}

.item_bot {
    margin-top: 20rpx;
    justify-content: space-between;
}

.tel {
    margin-left: 30rpx;
}

.item_bot .icon {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.btn {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 20rpx;
    color: #fff;
    background: #EF4A50;
    text-align: center;
}

.icon_box {
    width: 30rpx;
    height: 30rpx;
    border: 2rpx solid #f3f3f3;
    border-radius: 50%;
    margin-right: 10rpx;
}

.add_box .title {
    background: #fff;
    text-align: center;
    padding: 30rpx 0;
}

.add_box .item {
    background: #fff;
    padding: 20rpx;
    justify-content: space-between;
}

.textarea {
    width: 96%;
    padding: 2%;
    height: 100rpx;
}

.btn_1 {
    color: #fff;
    background: #FF5555;
    margin: 0 40rpx;
    margin-top: 50rpx;
}

.btn_2 {
    color: #fff;
    background: #00BEAF;
    margin: 0 40rpx;
    margin-top: 20rpx;
}