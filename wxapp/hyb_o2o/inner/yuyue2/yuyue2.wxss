@import "../../../__wuBaseWxss__/5.wxss";

.modal {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 5;
    background: rgba(0,0,0,0.5);
}

.choose_peo {
    background: #fff;
}

.c_p_i {
    padding: 20rpx;
}

.c_p_img {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
}

.choose_huige {
    position: fixed;
    z-index: 6;
    bottom: -800rpx;
    transition: all 0.5s;
    background: #fff;
    width: 100%;
    padding: 40rpx 0;
    padding-bottom: 50rpx;
}

.gui_item {
    padding: 10rpx 20rpx;
    border: 2rpx solid #999;
    margin: 0 15rpx 20rpx 0;
    font-size: 28rpx;
    display: inline-block;
}

.gui_sel {
    border-color: #EF4A50;
    color: #EF4A50;
}

.sure_btnn {
    width: 60%;
    margin: 0 auto;
    padding: 10rpx 0;
    background: #EF4A50;
    color: #fff;
    border-radius: 10rpx;
    margin-top: 20rpx;
    text-align: center;
    font-size: 28rpx;
}

.animate {
    bottom: 0;
}

page {
    background: #f3f3f3;
    padding-bottom: 160rpx;
}

.top {
    color: #666666;
}

.mb10 {
    margin-bottom: 10rpx;
}

.item {
    padding: 30rpx;
    background: #fff;
    position: relative;
}

.img {
    width: 40rpx;
    height: 38rpx;
    margin-right: 20rpx;
    padding-top: 20rpx;
}

.img1 {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.text {
    width: 100%;
}

.color_gray {
    color: #8a8a8a;
}

.input_box {
    padding: 10rpx 0;
}

.color_line {
    width: 100%;
    position: absolute;
    bottom: -20rpx;
    left: 0;
}

.mid {
    background: #fff;
    padding: 30rpx;
    justify-content: space-between;
}

.arr {
    width: 17rpx;
    height: 26rpx;
    margin-left: 10rpx;
}

.bot {
    background: #fff;
    padding: 0 20rpx;
}

.bot .top {
    padding: 20rpx 0;
    justify-content: space-between;
}

.bot .top .photo {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.bot .top .text {
    width: 80%;
}

.color_red {
    color: #FF5B26;
    border: 2rpx solid #FF5B26;
    border-radius: 20rpx;
    padding: 0rpx 20rpx;
}

.color_pink {
    color: #EF4A50;
    border: 2rpx solid #EF4A50;
    border-radius: 20rpx;
    padding: 5rpx 20rpx;
}

.fuhao {
