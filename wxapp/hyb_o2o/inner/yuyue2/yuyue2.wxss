}

.bot_fix {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    z-index: 5;
    padding: 20rpx 0;
}

.bot_fix .right {
    padding: 10rpx;
    margin: 0 30rpx;
    height: 100%;
    color: #fff;
    background: #EF4A50;
    text-align: center;
    font-size: 28rpx;
}

.date_top {
    background: #fff;
    justify-content: space-around;
    width: 100%;
    text-align: center;
    padding-bottom: 0;
}

.date_top .item {
    padding: 0;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #fff;
}

.date_top .item.current_i {
    color: #FF5C26;
    border-bottom: 2rpx solid #FF5C26;
}

.con {
    background: #f3f3f3;
    padding: 20rpx;
    height: 76vh;
    overflow-y: scroll;
}

.con .time {
    padding: 10rpx 0;
    text-align: center;
    border: 2rpx solid #E6E6E6;
    color: #5B5B5B;
    display: inline-block;
    width: 22%;
    background: #fff;
    border-radius: 20rpx;
    margin-left: 2%;
    margin-bottom: 20rpx;
}

.con .time.cur {
    border: 2rpx solid #FF5C26;
    color: #FF5C26;
    background: #ffe8df;
}

.sure_btn {
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}

.sure_btn .sure_choose {
    margin: 20rpx;
    background: #01BCB1;
    color: #fff;
    text-align: center;
}