@import "../../../__wuBaseWxss__/5.wxss";

page {
    background: #eee;
}

.selec {
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 10rpx 0;
    font-size: 30rpx;
    border-bottom: 2rpx solid #f1f1f1;
}

.selec view {
    width: 33.33%;
    box-sizing: border-box;
}

.selec .section {
    line-height: 52rpx;
    position: relative;
}

.selec .section .picker {
    width: 100%;
    text-align: center;
    position: relative;
    font-size: 28rpx;
}

.section .arrow_dowm {
    width: 40rpx;
    height: 43rpx;
    position: absolute;
    right: 24rpx;
    top: 50%;
    transform: translateY(-50%) rotate(90deg);
}

.section .arrow_dowm.arrow_up {
    transform: translateY(-50%) rotate(-90deg);
}

.section.jiage .arrow_dowm {
    top: 78%;
}

.section.jiage .arrow_dowm.arrow_up {
    top: 28%;
}

.list {
}

.goods_list {
    padding: 20rpx 10rpx;
    flex-wrap: wrap;
}

.goods_item {
    margin: 0 10rpx;
    margin-bottom: 20rpx;
    background: #fff;
    box-sizing: border-box;
}

.goods_item .img {
    width: 100%;
    height: 334rpx;
    flex-shrink: 0;
}

.goods_item .baoyou_label {
    color: #fff;
    padding: 0 10rpx;
    background: #EF4A50;
    font-size: 22rpx;
}

.fenlei {
    position: fixed;
    right: 0;
    top: 0;
    width: 480rpx;
    height: 100%;
    padding: 5rpx 20rpx;
    background: #fff;
    transform: translateX(540rpx);
    transition: all 0.5s;
    z-index: 5;
}

.zuohua {
    transform: translateX(0rpx);
}

.modal {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 1;
    position: fixed;
    left: 0;
    top: 0;
}

.fenlei .fenlei_cont .title {
    font-size: 32rpx;
    line-height: 60rpx;
}

.fenlei_cont {
    height: 90%;
    overflow-y: scroll;
}

.fen_item {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
}

.fen_item>label {
    width: 30%;
    border: 2rpx solid #d8d8d8;
    font-size: 24rpx;
    text-align: center;
    padding: 10rpx 0;
    margin-bottom: 17rpx;
}

.fenlei button {
    float: right;
    padding: 0rpx 30rpx;
    background: #a0a0a0;
    color: #fff;
    font-size: 28rpx;
    line-height: 1.8;
    border-radius: 0;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.choose {
    background: #EF4A50;
    color: #fff;
}

button.choose {
    background: #EF4A50;
    color: #fff;
}