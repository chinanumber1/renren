@import "../qddt/qddt.wxss";

page {
    padding-bottom: 140rpx;
    padding-top: 80rpx;
}

.go_index {
    position: fixed;
    left: 0;
    bottom: 0;
    background: #fff;
    padding: 30rpx 0rpx;
    width: 100%;
}

.go_index view {
    background: #EF4A50;
    color: #fff;
    text-align: center;
    padding: 20rpx 0;
    margin: 0 20rpx;
    font-size: 28rpx;
    border-radius: 10rpx;
}

.top_list {
    background: #fff;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 5;
}

.top_item {
    padding: 20rpx 0;
    border-bottom: 2rpx solid #eee;
    text-align: center;
}

.top_item.sel {
    color: #EF4A50;
    border-color: #EF4A50;
}

.item {
    padding: 0;
}

.pzy20 {
    padding: 20rpx;
}

.mid {
    background: #F5F5F5;
}

.item .qiang {
    color: red;
    border-color: red;
}

.item .sure_order {
    color: #EF4A50;
    border: 2rpx solid #EF4A50;
    background: none;
}

.item .pay_order {
    background: #EF4A50;
    color: #fff;
}

.j_img {
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
    border-radius: 50%;
}

.tel {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.tel_box {
    padding-left: 30rpx;
    border-left: 2rpx solid #f3f3f3;
}

.tel {
    width: 30rpx;
    height: 45rpx;
    margin-left: 10rpx;
}

.s_icon {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.pay_box {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(0,0,0,.5);
    z-index: 55;
}

.pay_inner {
    background: #fff;
    padding: 50rpx 100rpx;
    font-size: 30rpx;
    border-radius: 20rpx;
}

.pay_inner radio {
    transform: scale(0.8);
}

.pay_title {
    margin-bottom: 50rpx;
    text-align: center;
}

.mr20 {
    margin-right: 20rpx;
}