@import "../../../__wuBaseWxss__/5.wxss";

page {
    background: #f3f3f3;
}

.top {
    background: #FAFAFA;
    border-bottom: 2rpx solid #D9D9D9;
    color: #242424;
    text-align: center;
}

.list {
    background: #fff;
    position: relative;
    z-index: 5;
}

.z10 {
    z-index: 10;
}

.item {
    padding: 30rpx 20rpx;
}

.item .label {
    color: #E7454A;
    border: 2rpx solid #E7454A;
    font-size: 24rpx;
    padding: 0rpx 10rpx;
    margin-right: 10rpx;
}

.colorA0A0A0 {
    color: #A0A0A0;
}

.title {
    color: #333;
    flex-shrink: 0;
}

.time_input {
    border: 2rpx solid #EFEFEF;
    width: 200rpx;
    text-align: center;
}

.picker input {
    width: 150rpx;
}

.uploadImg_box {
    width: 200rpx;
    height: 200rpx;
    background: #EAEAEA;
    justify-content: center;
}

.uploadImg3 {
    padding: 20rpx;
    max-height: 340rpx;
}

.uploadImg3 image {
    height: 150rpx;
    width: 150rpx;
    margin-right: 10rpx;
}

.camera {
    width: 80rpx;
    height: 80rpx;
}

.submit {
    color: #fff;
    margin: 20rpx;
    background: #EF4A50;
}

.label_box {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #f3f3f3;
}

.label_box .label_inner {
    background: #fff;
    padding: 20rpx;
    overflow-y: scroll;
    height: 85%;
}

.label_box .submit {
    position: absolute;
    bottom: 20rpx;
    left: 48%;
    transform: translateX(-50%);
    width: 90%;
}

.label_item {
    margin-bottom: 20rpx;
}

.label_input {
    background: #F1F3F7;
    padding: 10rpx 20rpx;
    border-radius: 20rpx;
    width: 80%;
    margin-left: 4%;
}

.label_input input {
    width: 100%;
    font-size: 28rpx;
}

.label_icon {
    width: 40rpx;
    height: 40rpx;
    padding: 10rpx 0;
}

.kcrzxy {
    width: 70%;
    left: 50%;
    top: 15%;
    position: fixed;
    transform: translate(-50%,0);
    background: #fff;
    border-radius: 10px;
    z-index: 999;
}

.kcrzxyhd {
    text-align: center;
    font-size: 30rpx;
    background: #EF4A50;
    height: 70rpx;
    line-height: 70rpx;
    color: white;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.kcrzxybd {
    font-size: 28rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.queren {
    position: relative;
    height: 70rpx;
    width: 30%;
    left: 35%;
    font-size: 30rpx;
    line-height: 70rpx;
    text-align: center;
    color: white;
    background: #EF4A50;
    border-radius: 10rpx;
    margin: 5px 0;
}

button:active {
    color: rgba(255,255,255,0.6);
    opacity: 0.6;
}

.icons {
    display: inline-block;
    width: 35rpx;
    height: 35rpx;
    border: 2rpx solid #EF4A50;
    vertical-align: middle;
    margin-right: 10rpx;
}

.zhezhao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.6);
    z-index: 998;
}