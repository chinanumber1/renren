@import "../../../__wuBaseWxss__/5.wxss";

@import "../../template/template.wxss";

.b_icon {
    width: 25rpx;
    height: 25rpx;
    margin-right: 10rpx;
}

page {
    background: #f3f3f3;
}

.noadd {
    width: 100%;
    height: 100%;
    text-align: center;
}

.noadd image {
    width: 60%;
    margin-top: 100rpx;
}

.selec {
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 20rpx 0;
    font-size: 30rpx;
    border-bottom: 2rpx solid #f1f1f1;
}

.selec view {
    width: 33.33%;
}

.selec .section .picker {
    width: 100%;
    text-align: center;
    border-right: 1px solid #f2f2f2;
    position: relative;
    font-size: 26rpx;
}

.section .arrow_dowm {
    width: 27rpx;
    height: 30rpx;
    position: absolute;
    right: 24rpx;
    top: 50%;
    transform: translateY(-50%) rotate(90deg);
}

.list_title {
    padding: 20rpx;
    font-size: 30rpx;
    color: #595959;
    position: relative;
    background: #fff;
}

.list_title text {
    position: absolute;
    right: 20rpx;
    font-size: 28rpx;
    color: #B0B0B0;
}

.list_item {
    padding: 20rpx 20rpx;
    border-bottom: 10rpx solid #f3f3f3;
    background: #fff;
    box-sizing: border-box;
}

.list_item .img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
    position: relative;
}

.list_item .intro {
    width: 65%;
    position: relative;
    padding: 0 10rpx;
    height: 200rpx;
    display: flex;
    align-content: space-between;
    flex-wrap: wrap;
}

.list_item .intro>view {
    width: 100%;
}

.business_icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.list_item .title {
    line-height: 1.4em;
}

.list_item .title .label {
    border: 2rpx solid #ff7c51;
    color: #ff7c51;
    border-radius: 10rpx;
    padding: 5rpx;
    margin-right: 10rpx;
}

.list_item .title .label2 {
    border: 2rpx solid #FFCE89;
    color: #FFCE89;
}

.list_item .intro .door {
    display: inline-block;
    background: #e0e0e0;
    color: #afafaf;
    border-radius: 10rpx;
    padding: 5rpx;
}

.list_item .intro .profile {
    width: 100%;
    color: #A5A5A5;
}

.list_item .intro .money {
    border-bottom: 4rpx dashed #f3f3f3;
    width: 100%;
    color: #ff5b26;
}

.list_item .bot {
    color: #6E6E6E;
    width: 100%;
}

.list_item .bot text {
    float: right;
}

.zhichi {
    color: #F5B168;
    border-radius: 5rpx;
    padding: 0rpx 10rpx;
    margin-right: 10rpx;
    margin-bottom: 5rpx;
    border: 2rpx solid #F5B168;
}

.zhichi.types {
    color: #FFCE89;
    border-color: #FFCE89;
}

.pingfen image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 5rpx;
}

.dingwei {
    width: 100%;
    position: relative;
    padding-left: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.dingwei image {
    width: 25rpx;
    height: 25rpx;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.xmmoney {
    width: 100%;
    justify-content: space-between;
}

.xmmoney view {
    display: inline-flex;
    align-items: center;
}

.xmmoney view image {
    width: 25rpx;
    height: 25rpx;
    margin-right: 5rpx;
}

.xmmoney view:nth-child(2) {
    position: relative;
}

.xmmoney view:nth-child(2) text {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    border-top: 1rpx solid #999;
    transform: translateY(-50%);
}

.xingshi {
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
    color: #fff;
    padding: 5rpx 10rpx;
    font-size: 22rpx;
}