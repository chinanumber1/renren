@import "../../../__wuBaseWxss__/5.wxss";

@import "../../template/template.wxss";

.loca_icons {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.s_biao {
    padding: 0rpx 5rpx;
    border: 2rpx solid #e7454a;
    color: #e7454a;
    font-size: 24rpx;
    border-radius: 5rpx;
    margin-right: 10rpx;
}

page {
    background: #f3f3f3;
}

.noadd {
    width: 100%;
    height: 100%;
    text-align: center;
    margin-top: 100rpx;
}

.noadd image {
    width: 60%;
}

.selec {
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 20rpx 0;
    font-size: 30rpx;
    border-bottom: 2rpx solid #f1f1f1;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 5;
}

.selec view {
    width: 33.33%;
    box-sizing: border-box;
}

.selec .section .picker {
    width: 100%;
    text-align: center;
    border-right: 1px solid #f2f2f2;
    position: relative;
    font-size: 26rpx;
}

.section .arrow_dowm {
    width: 27rpx;
    height: 30rpx;
    position: absolute;
    right: 24rpx;
    top: 50%;
    transform: translateY(-50%) rotate(90deg);
}

.list {
    background: #fff;
    padding-top: 100rpx;
}

.list_title {
    padding: 20rpx;
    font-size: 30rpx;
    color: #595959;
    position: relative;
    background: #fff;
}

.list_title {
    text-align: right;
    font-size: 26rpx;
    color: #B0B0B0;
}

.goods_list {
    padding: 0 10rpx;
    flex-wrap: wrap;
}

.goods_item {
    padding: 0 10rpx;
    box-sizing: border-box;
}

.goods_item .img {
    width: 220rpx;
    height: 220rpx;
    flex-shrink: 0;
}

.goods_item .baoyou_label {
    color: #fff;
    padding: 0 10rpx;
    background: #EF4A50;
    font-size: 22rpx;
}

.star {
    width: 30rpx;
    height: 25rpx;
    margin-right: 5rpx;
}

.t_s_icon {
    width: 43rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.tel {
    width: 40rpx;
    height: 40rpx;
}

.list_item {
    padding: 20rpx 20rpx;
    border-bottom: 10rpx solid #f3f3f3;
    background: #fff;
    box-sizing: border-box;
}

.list_item .img {
    width: 200rpx;
    height: 170rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
    position: relative;
}

.zhichi {
    color: #666;
    border-radius: 5rpx;
    padding: 0rpx 10rpx;
}

.s_row {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 18rpx;
}

.row2 {
    line-height: 24rpx;
}

.row3 {
    line-height: 35rpx;
    justify-content: space-between;
}

.star-wrapper>image {
    width: 26rpx;
    height: 26rpx;
}

.s_row:last-child {
    margin-bottom: 0;
    margin-top: 15rpx;
}

.icon-box {
    display: flex;
    flex-direction: row;
}

.i-wrapper {
    display: flex;
    align-items: center;
    margin-right: 20rpx;
}

.i-wrapper>image {
    width: 24rpx;
    height: 24rpx;
}

.i-wrapper>text {
    font-size: 24rpx;
    color: #999;
}

.score>.ml {
    margin-left: 10rpx;
    font-size: 24rpx;
    color: #999;
}

.score_number {
    font-size: 24rpx;
    color: #999;
}

.zhichi.types {
    color: #FFCE89;
    border-color: #FFCE89;
}

.list_item .intro {
    width: 67%;
    position: relative;
    padding: 0 10rpx;
    padding-right: 0;
}

.business_icon {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.list_item .intro .door text {
    border: 2rpx solid #242424;
    border-radius: 10rpx;
    padding: 0rpx 5rpx;
    color: #242424;
}

.list_item .intro .door .label {
    border: 2rpx solid #ff7c51;
    color: #ff7c51;
    border-radius: 10rpx;
    padding: 0rpx 5rpx;
    margin-right: 10rpx;
}

.list_item .intro .door .label2 {
    border: 2rpx solid #01bcb1;
    color: #01bcb1;
}

.list_item .intro .door {
    display: inline-block;
    position: absolute;
    top: 66rpx;
}

.list_item .intro .profile {
    width: 100%;
    position: absolute;
    bottom: 85rpx;
    color: #A5A5A5;
}

.list_item .intro .money {
    position: absolute;
    bottom: 50rpx;
    border-bottom: 4rpx dashed #f3f3f3;
    width: 100%;
    color: #ff5b26;
}

.list_item .bot {
    position: absolute;
    bottom: 0rpx;
    color: #6E6E6E;
    width: 100%;
}

.list_item .bot text {
    float: right;
}

.line_one image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.line_one text {
    display: inline-block;
    width: 90%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.xingshi {
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
    color: #fff;
    padding: 5rpx 10rpx;
    font-size: 22rpx;
}