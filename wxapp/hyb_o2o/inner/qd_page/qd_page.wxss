@import "../../s_orders/s_orders.wxss";

.list_item .budget {
    position: absolute;
    top: 0rpx;
    right: 20rpx;
}

.list_item .qiang {
    color: #EF4A50;
    border: 2rpx solid #EF4A50;
    padding: 5rpx 30rpx;
    border-radius: 10rpx;
}

.tr {
    text-align: right;
}

.list_item .m_r {
    position: relative;
}

.fs0 {
    flex-shrink: 0;
}

.baojiamodal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
}

.baojiahid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
}

.baojiaform {
    width: 60%;
    padding: 50rpx;
    background: #fff;
    border-radius: 20rpx;
    position: relative;
    z-index: 1500;
    margin: 0 auto;
    top: 50%;
    transform: translateY(-50%);
    overflow: hidden;
}

.baojiaform view {
    width: 100%;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #999999;
}

.baojiaform input {
    width: 100%;
    font-size: 30rpx;
}

.baojiaform button::after {
    border: none;
}

.baojiaform button {
    font-size: 30rpx;
    color: #fff;
    background: #EF4A50;
    float: right;
    margin-top: 35rpx;
}