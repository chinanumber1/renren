@import "../../../__wuBaseWxss__/5.wxss";

@import "../../template/template.wxss";

.modal {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    z-index: 2;
}

.wd50 {
    width: 50%;
}

.icon {
    width: 35rpx;
    height: 35rpx;
    margin-right: 20rpx;
}

.top {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
    z-index: 2;
}

.top .t_item {
    width: 50%;
    text-align: center;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #eee;
}

.top .t_item.sel {
    color: #EF4A50;
    border-color: #EF4A50;
}

.no_more {
    width: 100%;
    text-align: center;
    padding-top: 100rpx;
}

.no_more image {
    width: 50%;
    margin-bottom: 20rpx;
}

.list {
    padding: 20rpx;
    margin-top: 82rpx;
}

.number {
    display: inline-block;
    width: 125rpx;
    text-align: center;
}

.add {
    background: #fff;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
}

.del {
    color: red;
}

.add button {
    background: #EF4A50;
    color: #fff;
    margin: 20rpx 50rpx;
}

.mj_box,.yhj_box {
    background: #fff;
    position: fixed;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 3;
    width: 580rpx;
    padding: 20rpx;
    padding-bottom: 0;
    border-radius: 20rpx;
}

.input {
    padding: 20rpx 2%;
    background: #F7EEEF;
    color: #938E92;
    margin: 20rpx 0rpx;
    border-radius: 10rpx;
    width: 96%;
}

.btn {
    background: #EF4A50;
    color: #fff;
    margin: 30rpx 20rpx;
}

.yhj_img {
    width: 64%;
    height: 135rpx;
    margin: 5px 0;
    margin-right: 10%;
}

.close_img {
    width: 35rpx;
    height: 35rpx;
    vertical-align: top;
}

.yhj_cont {
    padding: 0 20rpx;
}

.j_left {
    border-top: 10rpx solid #ECA72C;
    border-radius: 10rpx;
}

.j_left .j_l_top {
    padding: 10rpx 0;
    border-bottom: 2rpx dashed #ECA72C;
    color: #ECA72C;
}

.j_l_bot {
    font-size: 24rpx;
    color: #A6A6A6;
    padding: 20rpx 0;
}

.dian {
    width: 10rpx;
    height: 10rpx;
    margin-right: 10rpx;
    background: #ECA72C;
    border-radius: 50%;
    display: inline-block;
}

.j_right {
    width: 25%;
}

.j_bot {
    color: #ECA72C;
    box-shadow: 0 10rpx 10px #F0F0F0;
}