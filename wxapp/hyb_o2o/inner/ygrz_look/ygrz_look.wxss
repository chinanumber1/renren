@import "../../../__wuBaseWxss__/5.wxss";

page {
    background: #F3F3F3;
}

.list {
    padding-top: 20rpx;
}

.list .item {
    padding: 20rpx;
    background: #fff;
}

.list .item .title {
    color: #EF4A50;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

.list .item .input {
    width: 100%;
}

.submit[size=mini] {
    color: #EF4A50;
    border: 2rpx solid #EF4A50;
    margin: 50rpx 0;
    padding: 0 80rpx;
    font-size: 28rpx;
    border-radius: 20rpx;
    left: 50%;
    transform: translateX(-50%);
}

.radio {
    margin-right: 30rpx;
}

.radio radio {
    transform: scale(0.7);
}

.uploadImg {
    justify-content: center;
    color: #C7C7C7;
    background: #F3F3F3;
    margin-right: 30rpx;
    width: 150rpx;
    height: 150rpx;
    position: relative;
}

.uploadImg .del_icon {
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(30%,-30%);
    width: 30rpx;
    height: 30rpx;
}

.search-school {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f8f8f8;
    z-index: 10;
}

.school-name {
    margin-right: 10rpx;
}

.jineng {
    background: #fff;
    padding: 0 20rpx;
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    overflow-y: scroll;
}