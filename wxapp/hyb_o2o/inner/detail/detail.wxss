.btns {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    box-sizing: border-box;
}

.btns view button {
    padding: 0;
    margin: 0;
    text-align: center;
    height: 120rpx;
    border-radius: 0;
    line-height: 0;
    background: #fff;
}

.btns view button::after {
    border: none;
}

.btns view.btnsmini {
    width: 32%;
    display: flex;
    align-items: center;
    box-sizing: border-box;
}

.btns view.btnsmini button {
    width: 120rpx;
    font-size: 24rpx;
    color: #AAAAAA;
    padding: 18rpx 0;
}

.btns view.btnsmini button:first-child {
    border-right: 1rpx solid #E9E9E9;
}

.btns view.btnsmini button image {
    width: 55rpx;
    height: 55rpx;
    margin-bottom: 12rpx;
}

.btns view.btnsmini button text {
    display: block;
    text-align: center;
    width: 100%;
}

.btns view.btnslog {
    box-sizing: border-box;
    width: 68%;
    display: flex;
    align-items: center;
}

.btns view.btnslog button {
    width: 50%;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 30rpx;
    color: #fff;
}

.btns view.btnslog button:first-child {
    background: #F39800;
}

.btns view.btnslog button:last-child {
    background: #FF4544;
}