}

.j_left {
    width: 75%;
    padding: 20rpx;
    border-right: 2rpx dashed #fff;
    position: relative;
}

.j_left::after {
    content: "";
    display: block;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background: #fff;
    position: absolute;
    right: 0;
    top: -5rpx;
    transform: translate(50%,-50%);
}

.j_left::before {
    content: "";
    display: block;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background: #fff;
    position: absolute;
    right: 0;
    bottom: -5rpx;
    transform: translate(50%,50%);
}

