@import "../../__wuBaseWxss__/5.wxss";

page {
    background-color: #eeeeee;
    padding-bottom: 250rpx;
}

.top {
    position: relative;
    height: 500rpx;
    background: #fff;
}

.top .fx_bg {
    width: 100%;
    height: 500rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.cont {
    width: 100%;
    height: 500rpx;
    position: absolute;
    top: 0;
    left: 0;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    z-index: 2;
}

.cont .circle {
    width: 200rpx;
    height: 200rpx;
    border: 6rpx solid rgba(255,255,255,0.5);
    border-radius: 50%;
    display: inline-block;
    line-height: 200rpx;
    margin-top: 50rpx;
    margin-bottom: 50rpx;
    z-index: 5;
}

.input_box {
    padding: 20rpx;
    background: #fff;
}

.title {
    padding: 20rpx;
}

.content {
    padding: 30rpx;
    color: #b6b6b6;
}

.read {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    padding: 5rpx 30rpx;
    color: #999;
    font-size: 28rpx;
    justify-content: center;
}

.readfont {
    color: #ff6161;
}

.kcrzxy {
    width: 70%;
    left: 50%;
    top: 15%;
    position: fixed;
    transform: translate(-50%,0);
    background: #fff;
    border-radius: 10px;
    z-index: 999;
}

.kcrzxyhd {
    text-align: center;
    font-size: 30rpx;
    background: #EF4A50;
    height: 70rpx;
    line-height: 70rpx;
    color: white;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.kcrzxybd {
    font-size: 28rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.queren {
    position: relative;
    height: 70rpx;
    width: 30%;
    left: 35%;
    line-height: 70rpx;
    text-align: center;
    color: white;
    background: #EF4A50;
    border-radius: 10rpx;
    margin: 5px 0;
    font-size: 30rpx;
}

button:active {
    color: rgba(255,255,255,0.6);
    opacity: 0.6;
}

.zhezhao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.6);
    z-index: 998;
}

button[disabled][type="default"],button[disabled]:not([type]) {
    color: #fff;
}

.weui-btn[type=primary] {
    margin: 0 50rpx;
}

.bot {
    position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
    padding: 30rpx 0;
}