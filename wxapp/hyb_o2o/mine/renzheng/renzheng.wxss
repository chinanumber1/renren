page {
    background: #f5f5f5;
}

view {
    box-sizing: border-box;
}

.bdmodal-group {
    padding: 20rpx;
    box-sizing: border-box;
    background: #fff;
    width: 100%;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.bdmodal-group input {
    font-size: 28rpx;
    color: #666;
    margin-left: 20rpx;
}

button {
    margin: 0;
    padding: 0;
}

button::after {
    border: none;
}

button {
    width: 96%;
    margin: 0 auto;
    background: #EF4A50;
    color: #fff;
    border-radius: 50rpx;
    font-size: 30rpx;
    margin-top: 25%;
}

.yanzhengma {
    width: 88%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.yanzhengma view {
    padding: 6rpx 20rpx;
    background: #EF4A50;
    color: #fff;
    border-radius: 50rpx;
}