.copy {
    margin: 30rpx 0;
}

page {
    background: #f5f5f5;
}

.top_one {
    margin: 30rpx;
}

.top {
    background: #fff;
    color: #fff;
}

.top_t {
    position: relative;
    padding: 30rpx 0 30rpx 30rpx;
    color: #000;
    background: #fff;
    border-radius: 10rpx;
}

.top_bg {
    width: 100%;
    height: 88%;
    position: absolute;
    left: 0;
    top: 0;
}

.top_t .img {
    width: 100rpx;
    height: 100rpx;
    position: relative;
    border-radius: 50%;
    flex-shrink: 0;
}

.top_t .nickname {
    margin-bottom: 10rpx;
}

.top_t .img image {
    border-radius: 50%;
}

.top_t .img .write {
    position: absolute;
    right: 0;
    top: 60%;
    width: 30rpx;
    height: 30rpx;
    border-radius: 10rpx;
    z-index: 2;
    background: #FF9326;
    justify-content: center;
}

.top_t .img .write image {
    width: 80%;
    height: 80%;
}

.top_t .phone_icon {
    width: 30rpx;
    height: 30rpx;
    margin-right: 5rpx;
    vertical-align: middle;
}

.bdtells {
    width: 100%;
    padding: 30rpx;
    padding-top: 0;
    background: #fff;
    text-align: right;
    color: #EF4A50;
    font-size: 28rpx;
    box-sizing: border-box;
}

.t_right {
    width: 85%;
    margin-left: 30rpx;
}

.tx_btn {
    background: #efb04a;
    padding: 5rpx 20rpx;
    color: #fff;
    border-radius: 10rpx;
    margin-left: 20rpx;
}

.biaoji {
    padding: 5rpx 20rpx;
    background: #FF6364;
    border-radius: 20rpx;
    color: #fff;
    margin-left: 10rpx;
}

.text_in {
    color: #FF6364;
    border: 2rpx solid #FF6364;
    border-radius: 10rpx;
    padding: 0 20rpx;
}

.refill {
    background: #EF4A50;
    border-radius: 50rpx 0 0 50rpx;
    color: #fff;
    position: absolute;
    right: 0;
    top: 12%;
    font-size: 22rpx;
    padding: 5rpx;
    padding-right: 0;
    display: flex;
}

.refill image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.item {
    background: #fff;
