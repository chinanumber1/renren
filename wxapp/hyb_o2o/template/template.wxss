page {
    padding-bottom: 120rpx;
}

image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.swiper_wrap {
    width: 100%;
    height: 340rpx;
}

.sub_nav {
    border-bottom: 2rpx solid #f1f1f1;
    height: 70rpx;
    line-height: 70rpx;
    background: #f0f0f0;
    margin: 20rpx 0;
    margin-bottom: 0rpx;
}

.sub_nav text {
    font-size: 28rpx;
    padding: 0 20rpx;
    color: #242424;
    display: inline-block;
    height: 100%;
    position: relative;
}

.sub_nav .onon {
    font-size: 30rpx;
    color: #289AF6;
}

.sub_nav .onon::after {
    content: "";
    display: block;
    height: 4rpx;
    width: 30rpx;
    background: #289AF6;
    position: absolute;
    bottom: 5rpx;
    left: 42%;
}

.copy {
    text-align: center;
    font-size: 24rpx;
    margin-top: 30rpx;
    color: #686868;
}

.copy .fuhao {
    color: #f1f1f1;
}